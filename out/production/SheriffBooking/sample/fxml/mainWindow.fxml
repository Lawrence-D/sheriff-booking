<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<!--shuttle gray color-->
<GridPane fx:controller="sample.MainController"
          xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #696B6F;"
          alignment="TOP_CENTER">

    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER">
        <padding>
            <Insets top="25"/>
        </padding>

        <Label text="Main Menu" style="-fx-text-fill: white;">
            <font>
                <Font name="Verdana bold" size="20"/>
            </font>
        </Label>
    </HBox>

    <!--buttons are steel gray-->
    <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="5">
        <padding>
            <Insets top="15"/>
        </padding>
        <Button fx:id="bookInmate" text="Book Inmate" prefWidth="180" prefHeight="25"
                style="-fx-background-color:#43464B; -fx-text-fill: white;" onAction="#onButtonClicked">
            <font>
                <Font name="Verdana bold" size="15"/>
            </font>
        </Button>
        <!--
        <Button text="Search Inmates" prefWidth="180" prefHeight="25" style="-fx-background-color:#43464B; -fx-text-fill: white;">
            <font>
                <Font name="Verdana bold" size="15"/>
            </font>
        </Button>
        -->
        <Button text="Move Inmate" prefWidth="180" prefHeight="25" style="-fx-background-color:#43464B; -fx-text-fill: white;">
            <font>
                <Font name="Verdana bold" size="15"/>
            </font>
        </Button>
        <Button text="Admit Visitor" prefWidth="180" prefHeight="25" style="-fx-background-color:#43464B; -fx-text-fill: white;">
            <font>
                <Font name="Verdana bold" size="15"/>
            </font>
        </Button>

        <Button text="Credits" prefWidth="180" prefHeight="25"
                style="-fx-background-color:#43464B; -fx-text-fill: white;">
            <font>
                <Font name="Verdana bold" size="15"/>
            </font>
        </Button>
    </VBox>

</GridPane>